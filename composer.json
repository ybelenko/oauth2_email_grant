{
    "name": "ybelenko/oauth2_email_grant",
    "description": "Custom OAuth2 Email Grant compliant with league/oauth2-server package.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "keywords": [
        "OAuth2",
        "Email",
        "Grant"
    ],
    "authors": [
        {
            "name": "Yuriy Belenko",
            "email": "yura-bely@mail.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ybelenko\\OAuth2\\Server\\": "src/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "league/oauth2-server": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit",
        "fixer": "php-cs-fixer fix --allow-risky=yes -vv"
    },
    "config": {
        "sort-packages": true
    }
}
